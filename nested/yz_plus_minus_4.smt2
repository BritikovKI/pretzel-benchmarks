(set-logic HORN)
(declare-fun inv1 (Int Int Int) Bool)
(declare-fun inv2 (Int Int Int) Bool)
(declare-fun err () Bool)
(assert (=> true (inv1 0 0 0)))
(assert (forall ((x Int) (y Int) (z Int)) (=> (inv1 x y z) (inv2 x y z))))
(assert (forall ((x Int) (z Int) (y Int) (x1 Int) (y1 Int) (z1 Int))
  (=> (and (inv2 x y z) (< x 100) (= x1 (+ x y)) (= y1 (+ z 1)) (= z1 (- y 1)))
      (inv2 x1 y1 z1))))
(assert (forall ((x Int) (y Int) (z Int)) (=> (inv2 x y z) (inv1 x y z))))
(assert (forall ((y Int) (z Int) (x Int)) (=> (and (inv1 x y z) (not (>= x 0))) err)))
(assert (=> err false))
(check-sat)
